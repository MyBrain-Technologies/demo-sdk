<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText,SpUsage">

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/control_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:flexWrap="wrap"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_is_ims_streaming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="Is IMS Streaming?"
            android:textSize="12dp" />

        <Button
            android:id="@+id/btn_stop_streaming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="Stop Streaming"
            android:textSize="12dp" />

        <Button
            android:id="@+id/btn_get_ims_config"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="Get Config"
            android:textSize="12dp" />

        <Button
            android:id="@+id/btn_eeg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="EEG 0x00"
            android:textSize="12dp" />

        <Button
            android:id="@+id/btn_eeg_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="EEG 0x01"
            android:textSize="12dp" />

        <Button
            android:id="@+id/btn_eeg_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="EEG 0x02"
            android:textSize="12dp" />

        <Button
            android:id="@+id/btn_eeg_ims_100_hz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="EEG + IMS 100Hz"
            android:textSize="12dp" />

        <Button
            android:id="@+id/btn_eeg_ims_50_hz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="EEG + IMS 50Hz"
            android:textSize="12dp" />

        <Button
            android:id="@+id/btn_100_hz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="IMS 100 Hz"
            android:textSize="12dp" />

        <Button
            android:id="@+id/btn_50_hz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="IMS 50 Hz"
            android:textSize="12dp" />

        <Button
            android:id="@+id/btn_start_recording"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="Start REC"
            android:textSize="12dp" />

        <Button
            android:id="@+id/btn_stop_recording"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="Stop REC"
            android:textSize="12dp" />

    </com.google.android.flexbox.FlexboxLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/flexbox_bottom"
        app:layout_constraintTop_toBottomOf="@id/control_panel">

        <TextView
            android:id="@+id/txt_log"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textSize="12dp"
            tools:text="your logs here" />
    </ScrollView>

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/flexbox_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:flexWrap="wrap"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btn_clear_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="Clear Log"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/edt_rec_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="recording timeout"
            android:importantForAutofill="no"
            android:inputType="number"
            android:minWidth="100dp"
            android:text="30000" />

    </com.google.android.flexbox.FlexboxLayout>

</androidx.constraintlayout.widget.ConstraintLayout>